<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="50dp">

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start a new game by:
\n1. Using the search icon to find and play any player.
\n2. Playing against any friend in your Google+ circles.
\n3. Playing nearby players
\n(More details can be found in the How To Find Players button)

\nClick Saved Games to view and enter all games in progress."
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@+id/t2">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:src="@drawable/rsz_findplayer0"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/im2"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:src="@drawable/rsz_findplayer1"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/im3"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:src="@drawable/saved_games"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>
    </LinearLayout>

</RelativeLayout>
    </ScrollView>